# ==============================================================================
# Environment Variables - Prospeccao Fantastica Backend
# ==============================================================================
# Copy this file to .env and fill in your values.
# NEVER commit .env to version control!
# ==============================================================================

# ------------------------------------------------------------------------------
# Database (Required)
# ------------------------------------------------------------------------------
# PostgreSQL connection string
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?sslmode=require
#
# Local example:
#   DATABASE_URL="postgresql://postgres:password@localhost:5432/prospeccao"
#
# Neon example:
#   DATABASE_URL="postgresql://user:pass@ep-xyz.us-east-2.aws.neon.tech/neondb?sslmode=require"
#
DATABASE_URL="postgresql://USER:PASSWORD@HOST:5432/DATABASE?sslmode=require"

# ------------------------------------------------------------------------------
# Server
# ------------------------------------------------------------------------------
# Port for the Express server (optional, default: 3333)
# Note: Render.com sets PORT automatically, do not configure in production
PORT=3333

# Environment mode: development | production
NODE_ENV=development

# ------------------------------------------------------------------------------
# CORS Configuration (Required)
# ------------------------------------------------------------------------------
# Allowed frontend origins (comma-separated, no trailing slashes)
#
# Development:
#   FRONTEND_URL="http://localhost:5173"
#
# Multiple origins:
#   FRONTEND_URL="http://localhost:5173,http://localhost:8080"
#
# Production:
#   FRONTEND_URL="https://your-frontend.vercel.app"
#
FRONTEND_URL="http://localhost:5173,http://localhost:8080"

# ------------------------------------------------------------------------------
# Better Auth Configuration (Required)
# ------------------------------------------------------------------------------
# Secret key for signing sessions and tokens
# Generate with: openssl rand -base64 32
# IMPORTANT: Use a strong, unique secret in production!
BETTER_AUTH_SECRET="generate-a-strong-secret-here-use-openssl-rand-base64-32"

# Backend URL for auth callbacks (must match your server URL)
# Development: http://localhost:3333
# Production: https://your-backend.onrender.com
BETTER_AUTH_URL="http://localhost:3333"

# Base URL for auth (usually same as BETTER_AUTH_URL)
# Used for cookie domain and redirect URLs
BETTER_AUTH_BASE_URL="http://localhost:3333"

# ------------------------------------------------------------------------------
# Debug Options (Optional)
# ------------------------------------------------------------------------------
# Enable detailed auth debugging logs
# Set to "true" to see session/cookie details in console
# WARNING: Do not enable in production (exposes sensitive data)
DEBUG_AUTH=false
